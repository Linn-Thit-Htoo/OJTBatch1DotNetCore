@{
    ViewData["Title"] = "Login Page";
    var successMsg = TempData["successMessage"];
    var failMsg = TempData["fail"];
}

<h1>Login Page</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (successMsg is not null)
            {
                <div class="alert alert-success" role="alert">
                    @successMsg
                </div>
            }
            @if (failMsg is not null)
            {
                <div class="alert alert-danger" role="alert">
                    @failMsg
                </div>
            }
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login Page</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/User/Login">
                        <label>Phone Number: </label>
                        <input type="number" name="PhoneNumber" class="form-control" required />
                        <br />
                        <label>Password: </label>
                        <input type="password" name="Password" class="form-control" required />
                        <br />
                        <button class="btn btn-outline-dark float-end">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
