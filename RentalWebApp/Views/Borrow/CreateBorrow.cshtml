@{
    ViewData["Title"] = "Create Borrow";
}

<h1>Create Borrow</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Create Borrow</h3>
                </div>
                <div class="card-body">
                    <form action="/Borrow/Save" method="post">
                        <label>Member ID: </label>
                        <input type="text" class="form-control" name="MemberId" required />
                        <br />
                        <label>Asset Code: </label>
                        <input type="text" class="form-control" name="AssetCode" required />
                        <br />
                        <label>Return Date: </label>
                        <input type="date" class="form-control" name="ReturnDate" required />
                        <br />
                        <button type="submit" class="btn btn-outline-info">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>